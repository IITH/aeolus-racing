---
import "../styles/tailwind.css";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Sponsers from "../components/Sponsers.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
        <link rel="manifest" href="/favicons/site.webmanifest">
        <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <meta name="generator" content={Astro.generator} />
        <title>Aeolus Racing | IITH Motorsport Club</title>
        <meta name="description" content="Official website of Aeolus Racing, the motorsport club of IIT Hyderabad. Engineering Speed. Racing Innovation." />
        <meta name="keywords" content="Aeolus Racing, IITH, IIT Hyderabad, Motorsport Club, Formula Student, Racing, Engineering, Innovation, Student Team, India" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://aeolus.iith.ac.in/" />
        <meta property="og:title" content="Aeolus Racing | IITH Motorsport Club" />
        <meta property="og:description" content="Official website of Aeolus Racing, the motorsport club of IIT Hyderabad. Engineering Speed. Racing Innovation." />
        <meta property="og:image" content="https://aeolus.iith.ac.in/logo.png" />
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://aeolus.iith.ac.in/" />
        <meta property="twitter:title" content="Aeolus Racing | IITH Motorsport Club" />
        <meta property="twitter:description" content="Official website of Aeolus Racing, the motorsport club of IIT Hyderabad. Engineering Speed. Racing Innovation." />
        <meta property="twitter:image" content="https://aeolus.iith.ac.in/logo.png" />

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json">
          {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "Aeolus Racing",
            "url": "https://aeolus.iith.ac.in",
            "description": "Official website of Aeolus Racing, the motorsport club of IIT Hyderabad. Engineering Speed. Racing Innovation."
          }
        </script>
    </head>
    <body>
        <Navbar />
        <Hero />
        <About />
        <Sponsers />
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Murecho:wght@100..900&display=swap");
    @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Murecho:wght@100..900&family=Oxanium:wght@200..800&display=swap');
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #000000;
        color: white;
    }
</style>
