---
import { navItems, socials } from "../../config/nav";

---

<style lang="scss">
    @use "../layout/_Navbar.scss";
</style>

<header>
    <div class="logo">
        <img src="/logo.webp" alt="Aeolus Racing Logo" loading="lazy" decoding="async" />
        <div class="logo-text">
            <strong>Aeolus Racing</strong><br />
            <small>IITH MOTORSPORT CLUB</small>
        </div>
    </div>

    <!-- Desktop Navigation -->
    <nav class="nav-container">
        <div class="nav-links">
            {navItems.map((item) => <a href={item.href}>{item.name}</a>)}
        </div>
        <div class="socials">
            {
                socials.map((item) => {
                    return (
                        <a href={item.href} target="_blank" aria-label={item.name}>
                            <item.icon />
                        </a>
                    );
                })
            }
        </div>
    </nav>

    <!-- Mobile Menu Toggle -->
    <div class="mobile-menu-toggle" id="mobile-menu-toggle">
        <span></span>
        <span></span>
        <span></span>
    </div>
</header>

<!-- Mobile Navigation Menu -->
<nav class="mobile-nav" id="mobile-nav">
    <button class="mobile-nav-close" id="mobile-nav-close">Ã—</button>
    {navItems.map((item) => <a href={item.href}>{item.name}</a>)}
    <div class="mobile-socials">
        {
            socials.map((item) => {
                return (
                    <a href={item.href} target="_blank">
                        <item.icon />
                    </a>
                );
            })
        }
    </div>
</nav>

<script>
    // Mobile menu toggle functionality
    const mobileMenuToggle = document.getElementById("mobile-menu-toggle");
    const mobileNav = document.getElementById("mobile-nav");
    const mobileNavClose = document.getElementById("mobile-nav-close");

    function closeMobileMenu() {
        mobileMenuToggle?.classList.remove("active");
        mobileNav?.classList.remove("active");
    }

    function openMobileMenu() {
        mobileMenuToggle?.classList.add("active");
        mobileNav?.classList.add("active");
    }

    mobileMenuToggle?.addEventListener("click", () => {
        if (mobileMenuToggle.classList.contains("active")) {
            closeMobileMenu();
        } else {
            openMobileMenu();
        }
    });

    // Close button functionality
    mobileNavClose?.addEventListener("click", closeMobileMenu);

    // Close mobile menu when clicking on a link
    const mobileNavLinks = document.querySelectorAll(".mobile-nav a");
    mobileNavLinks.forEach((link) => {
        link.addEventListener("click", closeMobileMenu);
    });

    // Close mobile menu when clicking outside
    document.addEventListener("click", (e) => {
        if (
            !mobileMenuToggle?.contains(e.target as Node) &&
            !mobileNav?.contains(e.target as Node)
        ) {
            closeMobileMenu();
        }
    });
</script>
